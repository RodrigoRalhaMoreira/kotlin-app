<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFAFA"
        android:translationZ="0dp"></androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
            app:layout_constraintBottom_toBottomOf="@id/container1"
            android:layout_marginBottom="40dp"
            android:translationZ="1dp"
            android:layout_width="430dp"
            android:layout_height="200dp"
            android:layout_marginTop="-90dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#D2D8D8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="90dp"></androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:translationZ="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center|end"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:maxWidth="45dp"
                android:maxHeight="45dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/back_arrow_black"
                ></ImageView>
            <TextView
                android:id="@+id/textView4"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermostat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                ></TextView>
            <TextView
                android:id="@+id/textView10"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4"
                ></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
        android:translationZ="10dp"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container1">
        <TextView
            android:id="@+id/textView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Temperature:"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:gravity="center"></TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="10 ºC"
            android:textColor="#000000"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"></TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:alpha="0"
            android:layout_gravity="center|end"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:scaleType="fitCenter"
            app:layout_constraintLeft_toRightOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:src="@drawable/thermometer_temperature_up"
            ></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:translationZ="10dp"
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container">

        <TextView
            android:text="10 ºC"
            android:id="@id/textView3"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:translationZ="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="50dp"
            android:textColor="#000000"
            ></TextView>
        <TextView
            android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Adjust"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="#000000"
        ></TextView>

        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/seekbar"
            android:translationZ="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cs_circle_color="#D6D4D4"
            app:cs_circle_fill="#FFFFFF"
            app:cs_circle_progress_color="#424040"
            app:cs_circle_stroke_width="35dp"
            app:cs_circle_style="round"
            app:cs_circle_x_radius="0dp"
            app:cs_circle_y_radius="0dp"
            app:cs_disable_pointer="false"
            app:cs_disable_progress_glow="true"
            app:cs_end_angle="20"
            app:cs_hide_progress_when_empty="true"
            app:cs_lock_enabled="true"
            app:cs_maintain_equal_circle="true"
            app:cs_max="35"
            app:cs_move_outside_circle="true"
            app:cs_negative_enabled="false"
            app:cs_pointer_alpha_ontouch="10"
            app:cs_pointer_angle="0"
            app:cs_pointer_color="#939091"
            app:cs_pointer_halo_border_width="12dp"
            app:cs_pointer_halo_width="12dp"
            app:cs_pointer_stroke_width="35dp"
            app:cs_progress="10"
            app:cs_start_angle="-200"
            app:cs_use_custom_radii="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></me.tankery.lib.circularseekbar.CircularSeekBar>
    </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:scaleType="fitCenter"
            android:layout_gravity="center|end"
            android:alpha="1"
            android:id="@+id/onOff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/on_symbol"
            android:translationZ="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"></ImageView>

        <TextView
            android:id="@+id/textViewOn"
            android:translationZ="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="7dp"
            android:textSize="20sp"
            android:text="On"
            app:layout_constraintLeft_toLeftOf="@+id/onOff"
            app:layout_constraintRight_toRightOf="@+id/onOff"
            app:layout_constraintBottom_toTopOf="@+id/onOff"></TextView>

    <TextView
        android:id="@+id/textViewFanSpeed"
        android:translationZ="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="On"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"></TextView>


    <com.airbnb.lottie.LottieAnimationView
            app:lottie_rawRes="@raw/fan_animation"
            android:translationZ="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            ></com.airbnb.lottie.LottieAnimationView>



</androidx.constraintlayout.widget.ConstraintLayout>