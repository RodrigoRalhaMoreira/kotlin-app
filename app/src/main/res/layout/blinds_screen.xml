<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center|end"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:adjustViewBounds="true"
        android:maxWidth="45dp"
        android:maxHeight="45dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_arrow_gray"
        ></ImageView>
    <TextView
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="306dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blinds_0" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="151dp"
        android:layout_height="144dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="77dp"
        android:onClick="blindsUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blinds_arrow_down" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="151dp"
        android:layout_height="144dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="77dp"
        android:onClick="blindsDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blinds_arrow_up" />

    <TextView
        android:id="@+id/blind_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="183dp"
        android:layout_marginTop="441dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="245dp"
        android:text="0%"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>